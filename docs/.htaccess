# For√ßa UTF-8 para todos os arquivos
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .htm .css .js .py

# Especifica encoding para arquivos Python
<FilesMatch "\.py$">
    ForceType text/plain; charset=utf-8
</FilesMatch>

# Especifica encoding para arquivos CSS
<FilesMatch "\.css$">
    ForceType text/css; charset=utf-8
</FilesMatch>

# Especifica encoding para arquivos HTML
<FilesMatch "\.html?$">
    ForceType text/html; charset=utf-8
</FilesMatch>
